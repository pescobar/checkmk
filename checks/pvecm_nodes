#          2          1 hp2
#          3          1 hp3
#          4          1 hp4


def parse_pvecm_nodes(info):
    parsed = {}
    header = None
    for line in info:
        if line == ["Node", "Sts", "Inc", "Joined", "Name"]:
            header = ["node_id", "status", "joined", "name"]
            parse_func = _parse_version_eq_2
            continue
